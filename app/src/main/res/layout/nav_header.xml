<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="40dp"
    android:background="@mipmap/head_background">


    <LinearLayout
        android:id="@+id/user_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_email"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="65dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_cirI_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@mipmap/ic_launcher_round" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/nav_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/material_drawer_dark_background"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="154dp"
        android:orientation="horizontal"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/nav_usermail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/material_drawer_dark_selected"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/image_three_arrow"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="60dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/three_arrow" />

    </LinearLayout>

</RelativeLayout>